{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "strict": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "esModuleInterop": true,
    "allowJs": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "lib": ["es2022", "dom"],
    "jsx": "react",
    "jsxFactory": "jsx",
    "jsxFragmentFactory": "Fragment",
    "jsxImportSource": "",
    "baseUrl": "./",
    "types": [
      "node",
      "./src/types/globals",
      "./src/types/env",
      "./src/types/jsx"
    ],
    "paths": {
      "@core/*": ["src/core/*"],
      "@store/*": ["src/store/*"],
      "@components/*": ["src/components/*"],
      "@pages/*": ["src/pages/*"],
      "@types/*": ["src/types/*"]
    }
  },
  "include": ["src"]
}
